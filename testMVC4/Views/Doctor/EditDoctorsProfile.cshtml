@model testMVC4.Services.DoctorModel

@{
    ViewBag.Title = "EditDoctorsProfile";
}

<div class="t_center reg_form">
    <h2>Информация о докторе</h2>
    @using (Html.BeginForm())
    {
        <div class="input_block">
            <div>@Html.LabelFor(m => m.WorkPhone)</div>
            <div>@Html.TextBoxFor(m => m.WorkPhone, new { @class = "input" })</div>
        </div>

        <div class="input_block">
            <div>@Html.LabelFor(m => m.Levels)</div>
            <div>@Html.DropDownListFor(m => m.CvalId, Model.Levels, new { @class = "input" })</div>
        </div>

        <div class="input_block">
            <div>@Html.LabelFor(m => m.Units)</div>
            <div>@Html.DropDownListFor(m => m.UnitId, Model.Units, new { @class = "input" })</div>
        </div>

        <div class="input_block">
            <div>@Html.LabelFor(m => m.SpecificName)</div>
            <div>@Html.TextBoxFor(m => m.SpecificName, new { @class = "input" })</div>
        </div>

        <div class="input_block">
            <div>@Html.LabelFor(m => m.AboutDoc)</div>
            <div>@Html.TextAreaFor(m => m.AboutDoc, new { @class = "input" })</div>
        </div>

        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.UserId)

        <div class="input_block">
            <input type="submit" value="Add doctor information" class="button" />
        </div>
    }
</div>